<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    tools:context="ga.ustre.smartwatchsensor.activities.FirstActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_box="all">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/heart"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_heart"/>
            <ImageView
                android:id="@+id/hand"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_hold"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_marginTop="5dp"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/pb_first"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:text="Loading..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_first"
            android:layout_gravity="center_vertical"
            android:textSize="10dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/code_button"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            style="@style/Widget.WearDiag.Button"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/go_to_code"
            android:background="@color/ButtonColor"
            android:visibility="gone"
            android:textSize="10dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/code_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_box="all">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_message"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="12dp"/>

        <TableRow
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/first_char"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="A"/>
            <TextView
                android:id="@+id/second_char"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="A"/>
            <TextView
                android:id="@+id/third_char"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="A"/>
            <TextView
                android:id="@+id/fourth_char"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="A"/>
        </TableRow>
    </LinearLayout>

</android.support.wearable.view.BoxInsetLayout>

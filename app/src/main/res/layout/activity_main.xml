<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="ga.ustre.smartwatchsensor.activities.MainActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/ic_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:contentDescription="@string/helperContainer" />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb_searching"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <Button
            android:text="@string/move"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/bt_start_stop"
            style="@style/Widget.WearDiag.Button"
            android:background="@drawable/accept_deny_dialog_positive_bg"
            android:layout_gravity="bottom|center_horizontal"
            android:elevation="0dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="@string/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_progress"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textAlignment="center" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/sensorSelector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:text="@string/instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view"
            android:layout_gravity="top"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAlignment="center" />

        <RelativeLayout
            android:padding="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/heart"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_heart"
                android:contentDescription="@string/heart" />
            <ImageView
                android:id="@+id/heart_tick"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@id/heart"
                android:background="@drawable/ic_checked"
                android:contentDescription="@string/tick" />
            <ImageView
                android:id="@+id/hand"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_hold"
                android:contentDescription="@string/hand" />
            <ImageView
                android:id="@+id/hand_tick"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@id/hand"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_checked"
                android:contentDescription="@string/tick" />
        </RelativeLayout>

        <Button
            android:text="@string/select"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:textSize="12sp"
            android:id="@+id/select"
            style="@style/Widget.WearDiag.Button"
            android:background="@drawable/accept_deny_dialog_positive_bg"
            android:layout_gravity="bottom|center_horizontal"
            android:elevation="0dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp" />

    </FrameLayout>

</android.support.wearable.view.BoxInsetLayout>
